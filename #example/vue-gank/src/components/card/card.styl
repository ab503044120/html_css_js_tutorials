.card
  border-top 1px solid #f0f0f0
  display: flex
  flex-direction column
  line-height: 30px
  padding 5px
  &:hover
    background #f5f5f5
  .desc
    height:30px
    width:100%
    color #333
    font-size 1rem
    font-weight bolder
    white-space:nowrap// 设置不换行
    overflow hidden
    text-overflow ellipsis //溢出元素省略号显示
  .info
    display flex
    justify-content flex-start
    width 100%
    line-height: 20px
    height:20px
    .who
      width 20%
      flex-shrik 0
      font-size:0.8rem
      white-space:nowrap;
      overflow hidden
      text-overflow ellipsis

    .time
      flex-shrink 0
      font-size:0.8rem
      width: 20%




